---
    rules:
        eqeqeq: 0
        curly: 2
        no-mixed-spaces-and-tabs: 1
        no-unused-vars: 1
        no-shadow: 1
        space-unary-ops: 1
        key-spacing: 1
        semi: 1
        handle-callback-err: 1
        no-multi-spaces: 1
        curly: 1
        no-extra-boolean-cast: 1
        no-trailing-spaces: 1
        comma-spacing: 1
        no-use-before-define: 1
        no-unused-expressions: 1
        no-unused-expressions: 1
        eol-last: 1
        no-spaced-func: 1
        new-cap: 1
        no-extend-native: 1
        space-infix-ops: 1
        no-redeclare: 1
        camelcase: 1
        no-extra-bind: 1
        no-return-assign: 1
        no-extra-strict: 1
        consistent-return: 1
        dot-notation: 1
        no-undef: 1
        no-underscore-dangle: 1
        quotes:
            - 1
            - "single"
    env:
        node: true
        es6: true
        mocha: true

    ecmaFeatures:
        modules: true
